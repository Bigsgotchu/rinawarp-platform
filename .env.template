# Application
APP_URL=https://rinawarp.com
NODE_ENV=production

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your-tracking-id-here

# Monitoring
MONITORING_ENABLED=true
SLOW_DELIVERY_THRESHOLD_MS=10000
FAILURE_RATE_THRESHOLD=0.05

# Alerts
SLACK_ALERTS_ENABLED=true
SLACK_WEBHOOK_URL=your-webhook-url
SLACK_CHANNEL=#monitoring

EMAIL_ALERTS_ENABLED=true
ALERT_EMAIL_RECIPIENTS=alerts@yourdomain.com

# SMTP Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# Report Scheduling
DAILY_REPORTS_ENABLED=true
DAILY_REPORTS_TIME=06:00

WEEKLY_REPORTS_ENABLED=true
WEEKLY_REPORTS_TIME=07:00
WEEKLY_REPORTS_DAY=1

MONTHLY_REPORTS_ENABLED=true
MONTHLY_REPORTS_TIME=08:00
MONTHLY_REPORTS_DAY=1

# Security
UNSUBSCRIBE_SECRET=your-secret-key-here
