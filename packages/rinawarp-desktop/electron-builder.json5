/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  appId: "com.rinawarptechnologies.rinawarp",
  productName: "RinaWarp",
  directories: {
    output: "release",
    buildResources: "assets"
  },
  files: [
    "dist/**/*",
    "package.json"
  ],
  extraResources: [
    {
      from: "assets",
      to: "assets"
    }
  ],
  mac: {
    category: "public.app-category.developer-tools",
    icon: "assets/icons/generated/icon.icns",
    darkModeSupport: true,
    target: [
      "dmg",
      "zip"
    ]
  },
  win: {
    icon: "assets/icons/generated/icon.ico",
    target: [
      "nsis",
      "portable"
    ],
    artifactName: "${productName}-Setup-${version}.${ext}"
  },
  linux: {
    icon: "assets/icons/generated",
    target: [
      "AppImage",
      "deb",
      "rpm"
    ],
    category: "Development"
  },
  nsis: {
    oneClick: false,
    allowToChangeInstallationDirectory: true,
    createDesktopShortcut: true,
    createStartMenuShortcut: true
  }
}
