{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "strictNullChecks": false,
    "strict": false,
    "noImplicitAny": false,
    "exactOptionalPropertyTypes": false
  },
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/examples/**",
    "src/test/**",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
